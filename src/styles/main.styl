bg = #363537

.bespoke-parent
  background: bg
  font-family: "Lato", "Helvetica Neue", Helvetica, Arial, sans-serif
  font-weight: 300

mark
  background: yellow
  color: #222
  position: relative

  > span
    position: relative
    z-index: 1

h3 mark
  margin-left: 0.5ex
  margin-right: 0.5ex

  &::before
  &::after
    content: ''
    position: absolute
    top: 0px
    bottom: 0px
    width: 1ex
    background: yellow

  &::before
    left: 0px
    transform: skewX(-10deg) translateX(-0.5ex)

  &::after
    right: 0px
    transform: skewX(-10deg) translateX(0.5ex)



h1, h2, h3, h4, h5, h6
  font-weight: 100

backdrop(img, ext)
  .bespoke-backdrop.{img}
    background-image: url('/images/backdrop-' + img + '.' + ext)
    background-size: cover
    {block}

    &.repeat
      background-size: 60% auto
      background-position: 50% 50%
      background-repeat: repeat

    &.low
      background-position: 50% 80%

